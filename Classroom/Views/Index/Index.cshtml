@model Classroom.Models.Index.IndexModel;
@{
    Layout = "_Layout";
}
<div class="flex spaceBetween menuBlock">
    <div class="leftMenuBlock">
        <ul class=" flex menuUlStyle">
            <li class="menuLiStyle menuText"><a class="aStyle" href=""><span class="yellowText">Me</span><span class="orangeText">nu</span></a></li>
        </ul>
    </div>
    <div class="rightMenuBlock">
        <ul class="flex menuUlStyle">
            @if ((bool)ViewData["joined"] == false)
            {
                <li class="menuLiStyle menuText"><a class="aStyle" href="~/RegAut/Autoresation"><span class="orangeText">Lo</span><span class="yellowText">g</span><span class="blueText">in</span></a></li>
            }
            else
            {
                <li class="menuLiStyle menuText"><a class="aStyle" href="~/UserProfile/"><span class="blueText">Pr</span><span class="yellowText">of</span><span class="orangeText">ile</span></a></li>
                <li class="menuLiStyle menuText"><a class="aStyle" href="~/RegAut/Exit"><span class="orangeText">Lo</span><span class="yellowText">g o</span><span class="orangeText">ut</span></a></li>
            }

        </ul>
    </div>
</div>
<div class="anderMenuLine"></div>

@if ((bool)ViewData["joined"] != false)
{
    <h3>My Groups</h3>

        @foreach (Classroom.Group item in Model.listMyGroups)
        {
            <div class="flex menuBlock">

                <div class=" flex leftMenuBlock">
                    <div class="margin-left13px">
                        <a class="deleteButton" href="~/Index/DeleteGroup/@item.Id">
                            <span class="material-icons">delete</span>
                        </a>
                    </div>
                    <div class="margin-right13px margin-left13px">
                        @item.Id @item.Name
                    </div>
                </div>
                <div class="rightMenuBlock button margin-right13px">
                    <a class="linksStyle" href="~/Index/TasksInGroup/@item.Id">Перейти до групи</a>
                </div>
            </div>
        }

    <a href="~/GroupC/Create">Create group</a>
    <hr />
    <h3>Groups where i member</h3>
    <table>
        @for (int i = 0; i < Model.listGroups.Count; i++)
        {
            <tr><td>@Model.listGroups[i].Id</td><td>@Model.listGroups[i].Name</td><td><a href="~/Index/TasksInGroup/@Model.listGroups[i].Id">link</a></td></tr>
        }
    </table>
    <br />
    <br />
    <a href="~/GroupC/Join">Join</a>
}
else
{
    
}

